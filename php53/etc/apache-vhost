NameVirtualHost *:8888
Listen 8888

<VirtualHost *:8888>
	ServerAdmin webmaster@tsuru

	DocumentRoot /home/application/current
	<Directory />
		Options None
		AllowOverride None
	</Directory>
	<Directory /home/application/current/>
		Options None
		AllowOverride None
		Order allow,deny
		Allow from all
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error.log
	LogLevel warn
	CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>

#!/bin/bash -el

if [ $# -lt 2 ]
then
    echo "Usage:"
    echo
    echo "  % $0 <git-repository> <git-ref-id> <envs>"
    exit 1
fi

function deploy() {
    if [ -d $CURRENT_DIR ]; then
        cd $CURRENT_DIR
        git fetch origin
        cd -
    else
        git clone $1 $CURRENT_DIR
    fi
    cd $CURRENT_DIR
    git checkout $2 >/dev/null 2>&1
    cd -
}

SOURCE_DIR=/var/lib/tsuru

cat > /etc/profile.d/tsuru.sh <<END
export DEBIAN_FRONTEND=noninteractive
alias 'indent=echo "      $*"'
alias 'indent_arrow=echo " ---> $*"'
END
source /etc/profile.d/tsuru.sh

source ${SOURCE_DIR}/config
source ${SOURCE_DIR}/so_dependencies
deploy $@
so_dependencies

APP_SIZE=$(du -sh ${CURRENT_DIR} | awk '{print $1}');
indent_arrow "Application size is ${APP_SIZE}"
